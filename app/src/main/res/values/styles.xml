<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--**************** Text styles ****************-->
    <!--  Default font  -->
    <style name="text_font" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ysabeau_semi_bold</item>
    </style>

    <!--  Header text  -->
    <style name="text_header" parent="text_font">
        <item name="fontFamily">@font/ysabeau_semi_bold</item>
        <item name="android:textSize">@dimen/text_header_size</item>
    </style>

    <!--  Big text  -->
    <style name="text_big" parent="text_font">
        <item name="fontFamily">@font/ysabeau_semi_bold</item>
        <item name="android:textSize">@dimen/text_big_size</item>
    </style>

    <!--  Button text  -->
    <style name="text_button" parent="text_font">
        <item name="fontFamily">@font/ysabeau_semi_bold</item>
        <item name="android:textSize">@dimen/text_button_size</item>
    </style>

    <!--  Button caps text  -->
    <style name="text_button_caps" parent="text_button">
        <item name="android:textAllCaps">true</item>
    </style>

    <!--  Middle text  -->
    <style name="text_middle" parent="text_font">
        <item name="fontFamily">@font/ysabeau_semi_bold</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
    </style>

    <!--  Small text  -->
    <style name="text_small" parent="text_font">
        <item name="fontFamily">@font/ysabeau_regular</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>


    <!--**************** View styles ****************-->
    <!--  CheckBox  -->
    <style name="chk_remember" parent="Base.Theme.Task2">
        <item name="fontFamily">@font/ysabeau_semi_bold</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:button">@drawable/checkbox_remember</item>
        <item name="buttonTint">@color/color_secondary</item>
    </style>

    <!--  TextInputLayout  -->
    <style name="til_style" parent="Widget.Design.TextInputLayout">
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
        <item name="helperTextTextColor">@color/color_error</item>
    </style>

    <!--  EditText  -->
    <style name="et_style" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textAppearance">@style/text_big</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <!--  ShapableImageView  -->
    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--  Buttons  -->
    <style name="button_style" parent="Widget.AppCompat.Button">
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/color_text_additional</item>
    </style>


    <!--**************** Text styles ****************-->

    <!--  Small font  -->
    <style name="text_font_small" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ysabeau_regular</item>
    </style>

    <!--  Main header text  -->
    <style name="text_header_main" parent="text_font">
        <item name="android:textSize">@dimen/text_header_main</item>
    </style>


    <!--**************** View styles ****************-->
    <!--  TextInputLayout  -->
    <style name="TextInputLayout">
        <item name="android:layout_marginTop">@dimen/margin_middle</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:lines">1</item>
        <item name="hintTextColor">?attr/colorOnSecondary</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
    </style>

    <style name="TextInputLayoutTheme">
        <item name="colorPrimary">?attr/colorOnSecondary</item>
    </style>


    <style name="MyFloatingActionButton" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="colorContainer">?attr/colorSecondary</item>
        <item name="cornerSize">50%</item>
    </style>


    <!--**************** DialogFragment styles ****************-->
    <!--  DialogFragment  -->
    <style name="FullScreenDialog" parent="Theme.Task2">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>