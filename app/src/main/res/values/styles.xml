<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--**************** Text styles ****************-->
    <!--  Default font  -->
    <style name="text_font" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ysabeau_semi_bold</item>
    </style>

    <!--  Small font  -->
    <style name="text_font_small" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ysabeau_regular</item>
    </style>

    <!--  Main header text  -->
    <style name="text_header_main" parent="text_font">
        <item name="android:textSize">@dimen/text_header_main</item>
    </style>

    <!--  Header text  -->
    <style name="text_header" parent="text_font">
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <!--  Big text  -->
    <style name="text_big" parent="text_font">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <!--  Middle text  -->
    <style name="text_middle" parent="text_font">
        <item name="android:textSize">@dimen/text_middle</item>
    </style>

    <!--  Small text  -->
    <style name="text_small" parent="text_font_small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <!--**************** View styles ****************-->
    <!--  TextInputLayout  -->
    <style name="TextInputLayout">
        <item name="android:layout_marginTop">@dimen/margin_middle</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:lines">1</item>
        <item name="hintTextColor">?attr/colorOnSecondary</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
    </style>

    <style name="TextInputLayoutTheme">
        <item name="colorPrimary">?attr/colorOnSecondary</item>
    </style>


    <style name="MyFloatingActionButton" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="colorContainer">?attr/colorSecondary</item>
        <item name="cornerSize">50%</item>
    </style>


    <!--**************** DialogFragment styles ****************-->
    <!--  DialogFragment  -->
    <style name="FullScreenDialog" parent="Theme.Task2">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>


</resources>