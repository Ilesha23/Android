        <item name="colorAccent">@color/orange</item>

        <!--  EditText  -->
        <item name="colorControlNormal">@color/color_text_secondary</item>
        <item name="colorControlActivated">@color/color_text_secondary</item>
        <item name="colorControlHighlight">@color/color_text_secondary</item>

        <!-- Splash screen -->
        <item name="windowSplashScreenBackground">?attr/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon</item>
