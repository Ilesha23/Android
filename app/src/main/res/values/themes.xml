        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/grey</item>

        <!--  -->
        <item name="colorTertiary">@color/color_text_secondary</item>
