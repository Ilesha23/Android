<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomImageButton">
        <attr name="android:text" format="string|reference" />
        <attr name="android:textColor" format="color" />
        <attr name="android:fontFamily" format="string|reference" />
        <attr name="android:textAllCaps" format="boolean" />

        <attr name="android:src" format="reference" />
        <attr name="customImageButton_spacing" format="enum">
            <enum name="min" value="1" />
            <enum name="middle" value="2" />
            <enum name="max" value="3" />
        </attr>
        <attr name="customImageButton_space_between" format="dimension" />

        <attr name="android:background" format="color|reference" />
        <attr name="customImageButton_radius" format="dimension" />

        <attr name="customImageButton_stroke_width" format="dimension" />
        <attr name="customImageButton_stroke_color" format="color" />
    </declare-styleable>

</resources>