<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/contactsFragment">

    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.iyakovlev.task2.presentation.fragments.contacts.ContactsFragment"
        android:label="ContactsFragment" >
        <action
            android:id="@+id/action_contactsFragment_to_addContactDialogFragment"
            app:destination="@id/addContactDialogFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_contactDetailViewFragment"
            app:destination="@id/contactDetailViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactDetailViewFragment"
        android:name="com.iyakovlev.task2.presentation.fragments.detail_view.ContactDetailViewFragment"
        android:label="ContactDetailViewFragment">
        <argument
            android:name="contactId"
            app:argType="string" />
        <argument
            android:name="contactPhoto"
            app:argType="string" />
        <argument
            android:name="contactName"
            app:argType="string" />
        <argument
            android:name="contactCareer"
            app:argType="string" />
        <argument
            android:name="contactAddress"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/addContactDialogFragment"
        android:name="com.iyakovlev.task2.presentation.fragments.add_contact.AddContactDialogFragment"
        android:label="AddContactDialogFragment">
        <argument
            android:name="viewModel"
            app:argType="com.iyakovlev.task2.presentation.fragments.contacts.ContactsViewModel" />
    </dialog>
</navigation>